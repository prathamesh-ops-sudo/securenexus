# ─────────────────────────────────────────────────────────────
# SecureNexus — Environment Variables
# Copy this file to .env and fill in the values.
# For local dev, docker-compose.yml provides DATABASE_URL automatically.
# ─────────────────────────────────────────────────────────────

# ── Core (required) ──────────────────────────────────────────
DATABASE_URL=postgresql://securenexus:securenexus@localhost:5432/securenexus
SESSION_SECRET=local-dev-session-secret-change-in-production
S3_BUCKET_NAME=securenexus-dev

# ── Server ───────────────────────────────────────────────────
NODE_ENV=development
PORT=5000

# ── AWS ──────────────────────────────────────────────────────
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=        # optional for local dev; use IRSA on EKS
# AWS_SECRET_ACCESS_KEY=    # optional for local dev; use IRSA on EKS

# ── HTTPS (production only) ──────────────────────────────────
FORCE_HTTPS=false

# ── AI / Bedrock ─────────────────────────────────────────────
AI_BACKEND=bedrock
AI_MODEL_ID=mistral.mistral-large-2402-v1:0
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.1
AI_TOP_P=0.9
AI_TRIAGE_MODEL_ID=mistral.mistral-large-2402-v1:0
AI_TRIAGE_MAX_TOKENS=2048
AI_TRIAGE_TEMPERATURE=0.05
# SAGEMAKER_ENDPOINT=       # required only when AI_BACKEND=sagemaker
# SAGEMAKER_TRIAGE_ENDPOINT=

# ── OAuth (optional for local dev) ───────────────────────────
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=/api/auth/google/callback
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_CALLBACK_URL=/api/auth/github/callback
# COGNITO_USER_POOL_ID=

# ── GitHub API ───────────────────────────────────────────────
# GITHUB_TOKEN=             # for GitHub integration features
